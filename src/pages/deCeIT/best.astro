---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/Header.astro";

import AnimatedBorder from "@layouts/AnimatedBorder.astro";

import { slide } from "astro:transitions";
---

<BaseLayout>
    <Header />

    <main transition:animate={ slide({duration: "1s"}) }>
        
        <a href="/deCeIT/question/">
            <section class="title">
                <AnimatedBorder>
                    <h1> Pentru BEST </h1>
                </AnimatedBorder>
            </section>
        </a>

    </main>

</BaseLayout>

<style lang="scss">

    a {
        text-decoration: unset;
        color: black;
    }

    .title {

        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;

        h1 { font-size: clamp(3rem, 12.5vw, 20rem ); }
    }

</style>
