---
const {
    text="",
    link="",
    borderColor="red",
    backgroundColor="white",
    class: className,
    ...rest
} = Astro.props;
---

<a href={link} class={className} {...rest} >

    <svg><rect /></svg>
    {text}

</a>

<style define:vars={{ borderColor, backgroundColor }}>

    a {
        font-size: 1.5rem;
        font-weight: 400;
        color: black;

        text-decoration: none;
        margin: 0 10px;
        padding: 5px 10px;

        position: relative;

        background-color: var( --backgroundColor );

        border-radius: 4px;
    }

    svg {
        height: 100%;
        width: 100%;

        position: absolute;
        top: 0;
        left: 0;

        overflow: visible;
    }

    rect {

        x: 0;
        y: 0;

        rx: 4;
        ry: 4;

        width: 100%;
        height: 100%;

        fill: none;

        stroke: var( --borderColor );
        stroke-width: 2;
        stroke-dasharray: 422, 0;

        transition: all 0.60s linear;
    }

    a:hover rect {

        stroke-width: 5;
        stroke-dasharray: 15, 310;
        stroke-dashoffset: 48;

        transition: all 1.35s cubic-bezier(0.19, 1, 0.22, 1);
    }

</style>