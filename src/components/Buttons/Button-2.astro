---
const {
    text="",
    link="",
    borderColor="red",
    backgroundColor="white",
    class: className,
    ...rest
} = Astro.props;
---

<a href={link} class={className} {...rest}>
    {text}
</a>

<style define:vars={{ borderColor, backgroundColor }}>

    a {
        font-size: 1.5rem;
        font-weight: 400;
        color: black;

        text-decoration: none;
        margin: 0 10px;
        padding: 5px 10px;

        position: relative;

        background-color: var( --backgroundColor );
        
        border: 2px solid var( --borderColor );
        border-radius: 5px;
    }

    @keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 var( --borderColor );
        }
    }

    a:hover, a:focus {

        animation: pulse 1s infinite;
        box-shadow: 0 0 0 0.3em transparent;
    }

</style>